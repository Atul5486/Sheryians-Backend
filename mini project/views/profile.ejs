<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <div class="w-full min-h-screen bg-zinc-900 text-white p-5">
        <div class="w-full flex justify-end">
            <a class="px-3 py-2 bg-red-500 rounded-md" href="/logout">Logout</a>
        </div>
        <h3 class="my-3 text-3xl font-medium text-green-500"><span class="font-light text-white">Hello,</span> <%= user.username %></h3>
        <h5 class="text-xl">You can create a post</h5>

        <form action="/profile" method="post">
            <textarea placeholder="What's in your mind ?" class="p-2 w-1/3 resize-none bg-transparent border-2 border-zinc-500 rounded-md outline-none focus:shadow-[0px_0px_5px] my-3" name="content" required></textarea>
        <input class="bg-blue-500 px-3 py-2 rounded-md block w-44" type="submit" value="create post">
        </form>
        <div class="posts mt-10 ">
            <h3 class="text-2xl">Your posts.</h3>
            <div class="w-full postContainer py-5 flex gap-2 flex-wrap">
                <% user.posts.reverse().forEach(function(post){ %>
                    <div class="post w-72 bg-zinc-800 p-2 border-[1px] border-zinc-600 rounded-md">
                    <h3 class="text-blue-500">@<%=user.username %></h3>
                    <p class="text-sm tracking-tight"><%= post.content %></p>
                    <small class="mt-4 inline-block"><%=post.likes.length %> Likes</small>
                    <div class="flex gap-4">
                        <a class="text-blue-500" href="/like/<%=post._id%>"><%= post.likes.indexOf(user._id)==-1 ? "Like":"Unlike"  %></a>
                        <a class="text-zinc-600" href="/edit/<%=post._id%>">edit</a>
                    </div>
                </div>
              <%  }) %>
                
            </div>
        </div>
    </div>
</body>
</html>